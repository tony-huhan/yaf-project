.box {
	padding: 30px;
	margin-top: 15%;
}

.bs-callout {
	-moz-border-bottom-colors: none;
	-moz-border-left-colors: none;
	-moz-border-right-colors: none;
	-moz-border-top-colors: none;
	border-color: #eee #eee #eee #d9534f;
	border-image: none;
	border-radius: 3px;
	border-style: solid;
	border-width: 1px 1px 1px 5px;
	margin: 20px 0;
	padding: 20px;
}
